<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SuccessActivity"
    tools:showIn="@layout/activity_success">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/image_success"
            app:cardElevation="@dimen/cardview_elevation"
            android:layout_marginBottom="@dimen/cardview_margin_bottom">

            <FrameLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="@dimen/content_padding"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image_success" />
            </FrameLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <!-- Layout - Content Pedido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/content_padding">

        <!-- Layout - Title Pedido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_min"
            android:paddingLeft="@dimen/content_padding"
            android:paddingRight="@dimen/content_padding"
            android:paddingTop="@dimen/content_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pedido realizado com sucesso"
                android:textSize="20sp" />
        </LinearLayout>
        <!-- End Layout - Title Pedido -->

        <!-- Layout - Card Pedido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/content_padding"
            android:paddingLeft="@dimen/content_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- CardView - Pedido -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/cardview_margin_bottom"
                        app:cardElevation="@dimen/cardview_elevation">

                        <!-- Layout Lateral - Categoria -->
                        <LinearLayout
                            android:id="@+id/layout_categoria"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="#000"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_categoria"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:rotation="270"
                                android:text="NULO"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="@color/colorAccent"
                                android:textSize="15sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>
                        <!-- End Layout Lateral - Categoria -->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:padding="10dp"
                            android:paddingLeft="50dp">

                            <LinearLayout
                                android:id="@+id/layout_card_content_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:orientation="vertical">

                                <!-- Layout - Nome Fantasia -->
                                <LinearLayout
                                    android:id="@+id/linear_fantasia"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_fantasia"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="NOME FANTASIA"
                                        android:textSize="15sp" />

                                </LinearLayout>
                                <!-- End Layout - Nome Fantasia -->

                                <!-- Layout - Marca -->
                                <LinearLayout
                                    android:id="@+id/linear_marca"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_marca"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Indefinido"
                                        android:textColor="@android:color/black"
                                        android:textSize="10sp"
                                        android:textStyle="italic" />

                                </LinearLayout>
                                <!-- End Layout - Marca -->

                                <!-- Layout - Infos -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <!-- Layout - Data Pedido -->
                                        <RelativeLayout
                                            android:id="@+id/layout_data"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true">

                                            <LinearLayout
                                                android:id="@+id/linear_title_data"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tv_title_data"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Data do pedido"
                                                    android:textSize="12sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:id="@+id/linear_data"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/linear_title_data"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tv_data"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="dd/MM/yyyy"
                                                    android:textColor="@android:color/black"
                                                    android:textSize="18sp"
                                                    android:textStyle="bold" />
                                            </LinearLayout>

                                        </RelativeLayout>
                                        <!-- End Layout - Data Pedido -->

                                        <!-- Layout - Estimativa -->
                                        <RelativeLayout
                                            android:id="@+id/layout_estimativa"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true">

                                            <LinearLayout
                                                android:id="@+id/linear_title_estimativa"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tv_title_estimativa"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Estimativa"
                                                    android:textSize="12sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:id="@+id/linear_estimativa"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/linear_title_estimativa"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tv_estimativa"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="INDEFINIDO"
                                                    android:textColor="@android:color/black"
                                                    android:textSize="18sp"
                                                    android:textStyle="bold" />
                                            </LinearLayout>

                                        </RelativeLayout>
                                        <!-- End Layout - Estimativa -->

                                    </RelativeLayout>

                                </LinearLayout>
                                <!-- End Layout - Infos -->

                                <!-- Layout - Dvider -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="vertical">

                                    <View
                                        android:id="@+id/Divisor1"
                                        android:layout_width="fill_parent"
                                        android:layout_height="1dip"
                                        android:background="#E7F2F4" />
                                </LinearLayout>
                                <!-- End Layout - Dvider -->

                                <!-- Layout - Status -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <!-- Layout - Entrega -->
                                        <RelativeLayout
                                            android:id="@+id/layout_entrega"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true">

                                            <LinearLayout
                                                android:id="@+id/linear_title_entrega"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tv_title_entrega"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Entrega"
                                                    android:textSize="12sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:id="@+id/linear_entrega"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/linear_title_entrega"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tv_entrega"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="00 min"
                                                    android:textColor="@android:color/black"
                                                    android:textSize="18sp"
                                                    android:textStyle="bold" />
                                            </LinearLayout>

                                        </RelativeLayout>
                                        <!-- End Layout - Entrega -->

                                        <!-- Layout - Nota -->
                                        <RelativeLayout
                                            android:id="@+id/layout_nota"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true">

                                            <LinearLayout
                                                android:id="@+id/linear_title_nota"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tv_title_nota"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Sua nota"
                                                    android:textSize="12sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:id="@+id/linear_nota"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/linear_title_nota"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tv_nota"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="0,0 ✭"
                                                    android:textColor="@android:color/black"
                                                    android:textSize="18sp"
                                                    android:textStyle="bold" />
                                            </LinearLayout>

                                        </RelativeLayout>
                                        <!-- End Layout - Nota -->

                                    </RelativeLayout>

                                </LinearLayout>
                                <!-- End Layout - Status -->

                                <!-- Layout - Dvider 2 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="vertical">

                                    <View
                                        android:id="@+id/Divisor2"
                                        android:layout_width="fill_parent"
                                        android:layout_height="1dip"
                                        android:background="#E7F2F4" />
                                </LinearLayout>
                                <!-- End Layout - Dvider 2 -->

                                <!-- Layout - Total -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <!-- Layout - Title Total -->
                                        <RelativeLayout
                                            android:id="@+id/layout_title_total"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true">

                                            <LinearLayout
                                                android:id="@+id/linear_title_total"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tv_title_total"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Total"
                                                    android:textSize="18sp" />
                                            </LinearLayout>

                                        </RelativeLayout>
                                        <!-- End Layout - Title Total -->

                                        <!-- Layout - Total -->
                                        <RelativeLayout
                                            android:id="@+id/layout_total"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true">

                                            <LinearLayout
                                                android:id="@+id/linear_total"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tv_total"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="R$ 00,00"
                                                    android:textColor="@android:color/black"
                                                    android:textSize="18sp"
                                                    android:textStyle="bold" />
                                            </LinearLayout>

                                        </RelativeLayout>
                                        <!-- End Layout - Total -->

                                    </RelativeLayout>

                                </LinearLayout>
                                <!-- End Layout - Total -->

                            </LinearLayout>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <!-- End CardView - Pedido -->

            </LinearLayout>

        </LinearLayout>
        <!-- End Layout - Card Pedido -->

    </LinearLayout>
    <!-- End Layout - Content Pedido -->

</LinearLayout>