<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RegisterActivity"
    tools:showIn="@layout/activity_register"
    android:background="@color/colorBackground">

    <!-- Layout Content-->
    <LinearLayout
        android:padding="@dimen/content_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Layout - Dados Pessoais -->
        <LinearLayout
            android:padding="@dimen/content_padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Layout - Title Dados Pessoais -->
            <LinearLayout
                android:paddingBottom="@dimen/padding_min"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Seus dados pessoais"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!-- End Layout - Title Dados Pessoais -->

            <!-- Layout - Dados Pessoais -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <!-- CardView - Dados Pessoais -->
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/cardview_elevation"
                        android:layout_marginBottom="@dimen/cardview_margin_bottom">

                        <LinearLayout
                            android:padding="@dimen/content_padding"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- Layout - Nome -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/et_nome"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Seu nome completo"
                                    android:inputType="textPersonName"
                                    android:textCursorDrawable="@drawable/text_cursor_cyan"
                                    android:textSize="@dimen/text_header_size"
                                    app:met_floatingLabel="highlight"
                                    app:met_maxCharacters="100"
                                    app:met_primaryColor="?colorPrimary"
                                    app:met_singleLineEllipsis="true" />
                            </LinearLayout>
                            <!-- End Layout - Nome -->

                            <!-- Layout - CPF -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/et_cpf"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Seu CPF (apenas números)"
                                    android:inputType="numberSigned"
                                    android:textCursorDrawable="@drawable/text_cursor_cyan"
                                    android:textSize="@dimen/text_header_size"
                                    app:met_floatingLabel="highlight"
                                    app:met_maxCharacters="11"
                                    android:maxLength="11"
                                    app:met_primaryColor="?colorPrimary"
                                    app:met_singleLineEllipsis="true" />
                            </LinearLayout>
                            <!-- End Layout - CPF -->

                            <!-- Layout - Telefone -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/et_telefone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Seu telefone (apenas números)"
                                    android:inputType="phone"
                                    android:textCursorDrawable="@drawable/text_cursor_cyan"
                                    android:textSize="@dimen/text_header_size"
                                    app:met_floatingLabel="highlight"
                                    app:met_maxCharacters="11"
                                    android:maxLength="11"
                                    app:met_primaryColor="?colorPrimary"
                                    app:met_singleLineEllipsis="true" />
                            </LinearLayout>
                            <!-- End Layout - Telefone -->

                            <!-- Layout - Email -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/et_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Seu email mais usado"
                                    android:inputType="textEmailAddress"
                                    android:textCursorDrawable="@drawable/text_cursor_cyan"
                                    android:textSize="@dimen/text_header_size"
                                    app:met_floatingLabel="highlight"
                                    app:met_maxCharacters="100"
                                    android:maxLength="100"
                                    app:met_primaryColor="?colorPrimary"
                                    app:met_singleLineEllipsis="true" />
                            </LinearLayout>
                            <!-- End Layout - Email -->

                            <!-- Layout - Username -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/et_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Seu nome de usuário"
                                    android:inputType="textPersonName"
                                    android:textCursorDrawable="@drawable/text_cursor_cyan"
                                    android:textSize="@dimen/text_header_size"
                                    app:met_floatingLabel="highlight"
                                    app:met_maxCharacters="20"
                                    android:maxLength="20"
                                    app:met_primaryColor="?colorPrimary"
                                    app:met_singleLineEllipsis="true" />
                            </LinearLayout>
                            <!-- End Layout - Username -->

                            <!-- Layout - Password -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:passwordToggleEnabled="true"
                                    app:passwordToggleTint="@color/colorPrimary">

                                    <com.rengwuxian.materialedittext.MaterialEditText
                                        android:id="@+id/et_password"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Sua senha"
                                        android:inputType="textPassword"
                                        android:textCursorDrawable="@drawable/text_cursor_cyan"
                                        android:textSize="@dimen/text_header_size"
                                        app:met_floatingLabel="highlight"
                                        app:met_maxCharacters="30"
                                        android:maxLength="30"
                                        app:met_primaryColor="?colorPrimary"
                                        app:met_singleLineEllipsis="true" />

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>
                            <!-- End Layout - Password -->

                            <!-- Layout - Confirm Password -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:passwordToggleEnabled="true"
                                    app:passwordToggleTint="@color/colorPrimary">

                                    <com.rengwuxian.materialedittext.MaterialEditText
                                        android:id="@+id/et_confirm_password"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Repita sua senha"
                                        android:inputType="textPassword"
                                        android:textCursorDrawable="@drawable/text_cursor_cyan"
                                        android:textSize="@dimen/text_header_size"
                                        app:met_floatingLabel="highlight"
                                        app:met_maxCharacters="30"
                                        android:maxLength="30"
                                        app:met_primaryColor="?colorPrimary"
                                        app:met_singleLineEllipsis="true" />

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>
                            <!-- End Layout - Confirm Password -->

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <!-- End CardView - Dados Pessoais -->

            </LinearLayout>
            <!-- End Layout - Dados Pessoais -->

        </LinearLayout>
        <!-- End Layout - Dados Pessoais -->

        <!-- Layout - Endereço -->
        <LinearLayout
            android:padding="@dimen/content_padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Layout - Title Endereço -->
            <LinearLayout
                android:paddingBottom="@dimen/padding_min"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Seu endereço"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!-- End Layout - Title Endereço -->

            <!-- Layout - Endereço -->
            <LinearLayout
                android:layout_marginBottom="80dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- CardView - Endereço -->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/cardview_elevation"
                    android:layout_marginBottom="@dimen/cardview_margin_bottom">

                    <LinearLayout
                        android:padding="@dimen/content_padding"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Layout - Cidade -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <fr.ganfra.materialspinner.MaterialSpinner
                                android:id="@+id/spinner_cidades"
                                app:ms_errorColor="@android:color/holo_red_light"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_hint="Selecione uma cidade"
                                app:ms_floatingLabelColor="@color/colorPrimary"
                                app:ms_highlightColor="@color/colorPrimary"
                                app:ms_baseColor="@color/colorPrimary"
                                app:ms_hintColor="@color/colorPrimary"
                                app:ms_floatingLabelText="Selecione sua cidade"
                                app:ms_arrowColor="@color/colorPrimary" />

                        </LinearLayout>
                        <!-- End Layout - Cidade -->

                        <!-- Layout - Estado -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <fr.ganfra.materialspinner.MaterialSpinner
                                android:id="@+id/spinner_estados"
                                app:ms_errorColor="@android:color/holo_red_light"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_hint="Selecione um estado"
                                app:ms_floatingLabelColor="@color/colorPrimary"
                                app:ms_highlightColor="@color/colorPrimary"
                                app:ms_baseColor="@color/colorPrimary"
                                app:ms_hintColor="@color/colorPrimary"
                                app:ms_floatingLabelText="Selecione sua cidade"
                                app:ms_arrowColor="@color/colorPrimary" />

                        </LinearLayout>
                        <!-- End Layout - Estado -->

                        <!-- Layout - Rua e Número -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Relative Rua e Número -->
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <!-- Layout - Rua -->
                                <RelativeLayout
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content">

                                    <com.rengwuxian.materialedittext.MaterialEditText
                                        android:id="@+id/et_rua"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Rua"
                                        android:textCursorDrawable="@drawable/text_cursor_cyan"
                                        android:textSize="@dimen/text_header_size"
                                        app:met_floatingLabel="highlight"
                                        app:met_maxCharacters="100"
                                        android:maxLength="100"
                                        app:met_primaryColor="?colorPrimary"
                                        app:met_singleLineEllipsis="true" />
                                </RelativeLayout>
                                <!-- End Layout - Rua -->

                                <!-- Layout - Número -->
                                <RelativeLayout
                                    android:layout_alignParentRight="true"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content">

                                    <com.rengwuxian.materialedittext.MaterialEditText
                                        android:id="@+id/et_numero"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Nº"
                                        android:inputType="numberSigned"
                                        android:textCursorDrawable="@drawable/text_cursor_cyan"
                                        android:textSize="@dimen/text_header_size"
                                        app:met_floatingLabel="highlight"
                                        app:met_maxCharacters="4"
                                        android:maxLength="4"
                                        app:met_primaryColor="?colorPrimary"
                                        app:met_singleLineEllipsis="true" />
                                </RelativeLayout>
                                <!-- End Layout - Número -->

                            </RelativeLayout>
                            <!-- End Relative Rua e Número -->

                        </LinearLayout>
                        <!-- End Layout - Rua e Número -->

                        <!-- Layout - Bairro -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/et_bairro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Seu bairro"
                                android:inputType="text"
                                android:textCursorDrawable="@drawable/text_cursor_cyan"
                                android:textSize="@dimen/text_header_size"
                                app:met_floatingLabel="highlight"
                                app:met_maxCharacters="100"
                                android:maxLength="100"
                                app:met_primaryColor="?colorPrimary"
                                app:met_singleLineEllipsis="true" />
                        </LinearLayout>
                        <!-- End Layout - Bairro -->

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <!-- End CardView - Endereço -->

            </LinearLayout>
            <!-- End Layout - Endereço -->

        </LinearLayout>
        <!-- End Layout - Endereço -->

    </LinearLayout>
    <!-- End Layout Content-->

</android.support.v4.widget.NestedScrollView>